\newcommand{\junicode@newfont}[3]{
    \newfontface#1{#2}[
        Renderer =          {\junicode@renderer},
        #3
        Numbers =           {\junicode@figurealign,\junicode@figurestyle},
        SmallCapsFeatures = {Letters=SmallCaps},
    ]
}
\fi

